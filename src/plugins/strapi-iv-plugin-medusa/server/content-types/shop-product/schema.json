{
  "kind": "collectionType",
  "collectionName": "shop_products",
  "info": {
    "displayName": "Shop product",
    "singularName": "shop-product",
    "pluralName": "shop-products",
    "tableName": "shop_products"
  },

  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "unique": true
    },
    "handle": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext"
    },
    "discountable": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "boolean",
      "default": false,
      "required": true
    },
    "images": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true,
      "component": "medusa.product-images"
    },
    "stockandinventory": {
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "medusa.product-stock-and-inventory",
      "required": true
    },
    "is_giftcard": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "boolean",
      "default": false,
      "required": true
    },
    "medusa_profile_id": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "uid"
    },
    "medusa_id": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "uid",
      "required": true
    },
    "deleted_at": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "datetime"
    },

    "option_variants_id": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::strapi-iv-plugin-medusa.shop-product-option-variant",
      "mappedBy": "product_id"
    },

    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::strapi-iv-plugin-medusa.shop-product-variant",
      "mappedBy": "product_id"
    },

    "collection": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::strapi-iv-plugin-medusa.shop-collection",
      "inversedBy": "products",
      "required": true
    },

    "type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::strapi-iv-plugin-medusa.shop-product-type",
      "inversedBy": "products"
    },

    "options": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::strapi-iv-plugin-medusa.shop-product-option",
      "mappedBy": "product"
    }
  }
}
